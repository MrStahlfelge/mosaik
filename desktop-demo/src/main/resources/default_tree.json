{
  "type": "Column",
  "children": [
    {
      "type": "Label",
      "text": "This is a headline 2 label",
      "style": "HEADLINE2"
    },
    {
      "id": "clickButton",
      "type": "Button",
      "text": "Clicking this button will run a ChangeSiteAction",
      "onClick": {
        "type": "ChangeSiteAction",
        "element": {
          "id": "clickButton",
          "type": "Button",
          "enabled": false,
          "text": "ChangeSiteAction replaced the button"
        }
      }
    },
    {
      "type": "Row",
      "children": [
        {
          "type": "Box",
          "padding": "DEFAULT",
          "weight": 2,
          "children": [
            {
              "type": "Label",
              "text": "This label is surrounded by a padding and\ntakes 2 times the space than the label on the right",
              "textAlignment": "CENTER",
              "style": "BODY1"
            }
          ]
        },
        {
          "type": "Label",
          "text": "Label (alignment top, truncated)",
          "align": "TOP",
          "weight": 1,
          "maxLines": 1,
          "style": "BODY1"
        }
      ]
    },
    {
      "id": "clickLabel",
      "type": "Label",
      "text": "Label (alignment end, click it)",
      "align": "END",
      "style": "BODY1BOLD",
      "onClick": {
        "type": "ChangeSiteAction",
        "element": {
          "id": "clickLabel",
          "type": "Label",
          "text": "Label (alignment end, already clicked)",
          "align": "END",
          "style": "BODY1BOLD",
          "textColor": "PRIMARY"
        }
      }
    },
    {
      "type": "Box",
      "children": []
    }
  ]
}
